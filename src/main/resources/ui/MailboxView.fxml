<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="emailclient.controller.MailboxController">

    <left>
        <VBox spacing="10" prefWidth="230"
              style="-fx-background-color: #f3f3f3; -fx-padding: 12;">

            <Label text="Акаунти" style="-fx-font-size: 14; -fx-font-weight: bold;" />
            <ListView fx:id="accountsList" prefHeight="150"/>

            <Separator/>

            <Label text="Папки" style="-fx-font-size: 14; -fx-font-weight: bold;" />
            <ListView fx:id="foldersList" VBox.vgrow="ALWAYS"/>

            <HBox spacing="10">
                <Button text="Створити" onAction="#handleCreateFolder"/>
                <Button text="Видалити" onAction="#handleDeleteFolder"/>
            </HBox>

        </VBox>
    </left>

    <center>
        <VBox spacing="10" style="-fx-padding: 10;">
            <ToolBar>
                <Button text="Написати" onAction="#handleNewMessage"/>
                <Button text="Оновити" onAction="#handleRefresh"/>
                <Button text="Отримати пошту" onAction="#handleSyncInbox"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Вийти" onAction="#handleLogout"/>
            </ToolBar>

            <TableView fx:id="messagesTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colFrom" text="Від" prefWidth="160"/>
                    <TableColumn fx:id="colSubject" text="Тема" prefWidth="260"/>
                    <TableColumn fx:id="colDate" text="Дата" prefWidth="140"/>
                    <TableColumn fx:id="colImportance" text="!" prefWidth="50"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <right>
        <VBox fx:id="messageViewContainer"
              prefWidth="420"
              VBox.vgrow="ALWAYS"
              style="-fx-background-color: #fafafa; -fx-padding: 10;"/>
    </right>

</BorderPane>
