<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="emailclient.controller.LoginController"
            prefWidth="380" prefHeight="280"
            style="-fx-background-color: #fafafa;"
            stylesheets="@../styles/error.css">

    <center>
        <VBox alignment="CENTER" spacing="14" style="-fx-padding: 30;">

            <Label text="Вхід у систему"
                   style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

            <TextField fx:id="usernameField" promptText="Ім'я користувача"
                       prefWidth="240"/>

            <PasswordField fx:id="passwordField" promptText="Пароль"
                           prefWidth="240"/>

            <Label fx:id="errorLabel" style="-fx-text-fill: red;"/>

            <HBox spacing="12" alignment="CENTER">
                <Button text="Увійти" onAction="#handleLogin" prefWidth="100"/>
                <Button text="Створити акаунт" onAction="#handleOpenCreate" prefWidth="130"/>
            </HBox>

        </VBox>
    </center>

</BorderPane>
